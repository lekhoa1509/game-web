DRIVE_API_KEY="YOUR_GOOGLE_DRIVE_API_KEY"

# Change if 5173 is already in use
PORT=5173

# If deployed behind a reverse proxy (Cloudflare/Nginx/Vercel/etc.)
TRUST_PROXY=0

# CORS allowlist (comma-separated). Leave empty for same-origin only.
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=

# Restrict which Drive folders/files can be proxied (comma-separated Drive IDs)
# Strongly recommended for public deployments to prevent abuse.
ALLOWED_DRIVE_FOLDER_IDS=
ALLOWED_DRIVE_FILE_IDS=

# Allowlist enforcement (auto-enables when allowlists are set)
STRICT_DRIVE_ALLOWLIST=

# Basic rate limiting for /api/drive/*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=180
